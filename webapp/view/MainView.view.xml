<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:l="sap.ui.layout" controllerName="com.amt.assortmentmaintenancetool.controller.MainView" displayBlock="false">
    <Page id="page" title="{i18n>title}" titleAlignment="Center">
        <content>
            <l:ResponsiveSplitter defaultPane="default">
                <l:PaneContainer resize=".onRootContainerResize">
                    <l:SplitPane requiredParentWidth="400" id="default">
                        <l:layoutData>
                            <l:SplitterLayoutData size="{sizes>/pane1}"/>
                        </l:layoutData>
                        <Panel headerText="Sortimenter" height="100%">
                            <Text text="LayoutData.size={sizes>/pane1}"/>

                            <Table id="AssortmentTable" inset="false" fixedLayout="false" sticky="HeaderToolbar,ColumnHeaders" items="{path:'/assortmentSet',sorter:[{path:'Asort',descending:false}]}">
                                <headerToolbar>
                                    <OverflowToolbar id="_IDGenOverflowToolbar1" design="Solid" style="Standard" width="100%">
                                        <content>
                                            <Button id="butGetData" text="Oppfrisk data" press="refreshAssortment" icon="sap-icon://refresh" type="Ghost"/>
                                            <SearchField id="searchFieldAssortment" placeholder="Fritekstsøk sortiment" liveChange="filterAssortment($event)" width="14rem"/>
                                            <ComboBox id="comboBoxSize" placeholder="Velg størrelse" change="filterAssortment()">
                                                <core:Item key="1" text="1 - Grunnsortiment"/>
                                                <core:Item key="2" text="2 - Normal"/>
                                                <core:Item key="3" text="3 - Stor"/>
                                                <core:Item key="4" text="4 - Veldig stor"/>
                                                <core:Item key="5" text="5 - Ekstra stor"/>
                                            </ComboBox>
                                        </content>
                                    </OverflowToolbar>
                                </headerToolbar>
                                <infoToolbar>
                                    <OverflowToolbar id="_IDGenOverflowToolbar2">
                                        <Label id="_IDGenLabel2" text="Velg et sortiment for å begynne"/>
                                    </OverflowToolbar>
                                </infoToolbar>

                                <columns>
                                    <Column id="_IDGenColumn1">
                                        <Text id="_IDGenText1" text="Sortiment"/>
                                    </Column>
                                    <Column id="_IDGenColumn2" minScreenWidth="Tablet" demandPopin="true">
                                        <Text id="_IDGenText2" text="Beskrivelse"/>
                                    </Column>
                                    <Column id="_IDGenColumn3" minScreenWidth="Tablet" demandPopin="true" hAlign="End">
                                        <Text id="_IDGenText3" text="Størrelse"/>
                                    </Column>
                                    <Column id="_IDGenColumn4" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                                        <Text id="_IDGenText4" text="Ant. artikler"/>
                                    </Column>
                                    <Column id="_IDGenColumn5" demandPopin="true" hAlign="Center">
                                        <Text id="_IDGenText5" text="Ant. butikker"/>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem id="_IDGenColumnListItem1" vAlign="Middle" type="Active" press=".pressAssortmentItem($event)">
                                        <cells>
                                            <Text id="_IDGenText8" text="{Asort}"/>
                                            <Text id="_IDGenText6" text="{Name1}"/>
                                            <Text id="_IDGenText7" text="{Assordimval1}"/>
                                            <Text id="_IDGenText9" text="{ArticlesCount}"/>
                                            <Text id="_IDGenText10" text="{StoresCount}"/>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </Panel>
                    </l:SplitPane>
                    <l:PaneContainer orientation="Vertical" resize=".onInnerContainerResize">
                        <l:SplitPane requiredParentWidth="600">
                            <l:layoutData>
                                <l:SplitterLayoutData size="{sizes>/pane2}"/>
                            </l:layoutData>
                            <Page title="Listing av artikler">
                                <VBox id="vboxListing"/>
                            <footer>
                                <OverflowToolbar width="100%" id="toolbar2">
                                    <content>
                                        <HBox width="100%" id="HboxListingPagination"/>
                                    </content>
                                </OverflowToolbar>
                            </footer>
                            </Page>
                        </l:SplitPane>
                        <l:SplitPane requiredParentWidth="600">
                            <l:layoutData>
                                <l:SplitterLayoutData size="{sizes>/pane3}"/>
                            </l:layoutData>
                            <Page title="Butikker">
                                <footer>
                                    <OverflowToolbar id="otb3">
                                        <Label text="Buttons:"/>
                                        <ToolbarSpacer/>
                                        <Button text="New" type="Transparent"/>
                                        <Button text="Open" type="Transparent"/>
                                        <Button text="Save" type="Transparent"/>
                                        <Button text="Save as" type="Transparent"/>
                                        <Button text="Cut" type="Transparent"/>
                                        <Button text="Copy" type="Transparent"/>
                                        <Button text="Paste" type="Transparent"/>
                                        <Button text="Undo" type="Transparent"/>
                                    </OverflowToolbar>
                                </footer>
                            <content>
                                <VBox xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns="sap.m" id="vboxStores"/>
                            </content>
                            </Page>
                        </l:SplitPane>
                    </l:PaneContainer>
                </l:PaneContainer>
            </l:ResponsiveSplitter>
        </content>

        <footer>
            <Bar>
                <contentRight>
                    <Button id="cancel" press="onTestClick" text="TEst" type="Transparent" visible="true"/>
                </contentRight>
            </Bar>
        </footer>
    </Page>
</mvc:View>